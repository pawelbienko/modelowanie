{% extends 'base.html.twig' %}

{% block body %}
	{% if is_granted('ROLE_ADMIN') -%}
	        <a class="btn btn-success" href="{{ path('books') }}">Wypożycz kolejną</a>
	{% endif %}

	<table class="table">
    <thead>
      <tr>
        <th>nazwa</th>
        <th>start</th>
        <th>end</th>
        <th>status</th>
        <th>akcje</th>
      </tr>
    </thead>
    <tbody>
	{% for book in booking %}
      	<tr>
      		<td>{{ book.item.name }}</td>
			<td>{{ book.start|date('Y-m-d') }}</td>
			<td>{{ book.end|date('Y-m-d') }}</td>
			<td>{{ book.status }}</td>
			{# <td>{% if book.enabled == false %}
					nie
				{% else %}
				    tak
				{% endif %}
			</td>
			<td>
				{% if book.verifed == false %}
					nie
				{% else %}
				    tak
				{% endif %}
			</td>
			<td>
				{% for role in book.roles %}
					<li>{{ role }}</li>
				{% endfor %}
			<td> #}	
			<td>
				<div class="btn-group">
					{% if is_granted('ROLE_ADMIN') -%}
						<a class="btn btn-primary" href="{{ path('booking_edit', {'id': book.id}) }}">
					        edytuj
					    </a>
					    <a class="btn btn-success" href="{{ path('booking_remove', {'id': book.id}) }}">
					        usuń
					    </a>
					{% endif %}
				</div>    
			</td>
		</tr>
	{% endfor %}
{% endblock %}