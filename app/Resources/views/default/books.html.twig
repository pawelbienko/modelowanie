{% extends 'base.html.twig' %}

{% block body %}
	{% if is_granted('ROLE_ADMIN') -%}
	        <a class="btn btn-success" href="{{ path('books_add') }}">Dodaj Książkę</a>
	{% endif %}

	<table class="table">
    <thead>
      <tr>
        <th>nazwa</th>
        <th>email</th>
        <th>włączony</th>
        <th>zweryfikowany</th>
        <th>role</th>
        <th>akcje</th>
      </tr>
    </thead>
    <tbody>
	{% for book in books %}
      	<tr>
